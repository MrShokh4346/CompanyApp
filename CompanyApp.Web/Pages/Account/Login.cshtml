<div class="row justify-content-center">
    <div class="col-12 col-sm-8 col-md-6 col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-3">Вход</h5>
                @if (!string.IsNullOrEmpty(Model.Error)) { <div class="alert alert-danger">@Model.Error</div> }
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input class="form-control" asp-for="Email" value="admin@local" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Пароль</label>
                        <input class="form-control" asp-for="Password" type="password" value="Admin123$" />
                    </div>
                    <button class="btn btn-primary w-100">Войти</button>
                </form>
            </div>
        </div>
    </div>
</div>


